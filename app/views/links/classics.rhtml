<h2>Classical Links</h2>
<% @classics_links.each do |link| -%>
	<p><%= link_to link.name, link.url %>
	<% if link.description != nil and link.description != "" -%>
	<br /><%= link.description %>
	<% end -%>
	</p>
<% end -%>
	
<h2>Search Indexes and Directories</h2>
<% @search_links.each do |link| -%>
	<p><%= link_to link.name, link.url %>
	<% if link.description != nil and link.description != "" -%>
	<br /><%= link.description %>
	<% end -%>
	</p>
<% end -%>