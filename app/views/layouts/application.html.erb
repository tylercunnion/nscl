<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<link rel="icon" href="/favicon.png" type="image/png" />
		<title><%= @page_title ||= "National Senior Classical League" %> | nscl.org</title>
		<%= stylesheet_link_tag 'master' %>
		<!--[if gte IE 5]><%= stylesheet_link_tag 'internet-explorer' %><![endif]-->
		<%= javascript_include_tag :defaults %>
		<%= javascript_include_tag "google-analytics" %>
		<script type="text/javascript">
				$(document).ready(function() {
					googleAnalytics("<%= (out = yield :analytics_code) ? out : APP_CONFIG['google_analytics'] %>", "nscl.org");
					<%= yield :jquery %>
				});		
		</script>


	</head>
	<body>
		<div id="header" class="<%= @controller.controller_path.split('/')[0] %>">
			<%= image_tag "seal_headline.png", :alt => "National Senior Classical League" %>
			<%= link_to "", root_url, {:id => "header_home_link"} %>
			<div id="navigation-div">
			    <ul id="navigation">
					<li><%= link_to image_tag("events.png", :alt => "Events"), :controller => "/events", :action => "convention" %></li>
					<li><%= link_to image_tag("members.png", :alt => "Members"), :controller => "/members/scholarships", :action => "hal_rather" %></li>
			        <li><%= link_to image_tag("official.png", :alt => "Official Business"), :controller => "/business/officers", :link => "president" %></li>
			        <li><%= link_to image_tag("publications.png", :alt => "Publications"), :controller => "/publications", :action => "convention_ear" %></li>
					<li><%= link_to image_tag("nscl50.png", :alt => "NSCL 50"), "/nscl50" %></li>
			    </ul>
			</div>
		</div>

		<div id="content">
			<div id="sectionnav">
				<%= render :partial => @controller.controller_path.split('/')[0] + "/section_nav" %>
			</div>
			<div id="text">
				<% unless flash[:notice].blank? %><p id="notice"><%= flash[:notice] %></p><% end %>
				<% unless flash[:error].blank? %><p id="error"><%= flash[:error] %></p><% end %>
				<%= @content_for_layout %>
				<!--[if lte IE 6]>
					<p><%=link_to "Does this site look strange?", :controller => '/about', :action => 'ie6'%></p>
				<![endif]-->
			</div>
		</div>
	
		<div id="footer"></div>
	</body>
</html>