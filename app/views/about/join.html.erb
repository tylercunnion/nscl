		<label for="member_state_id">State Delegation:<br /><span style="font-size: .7em; font-weight: normal;">You may be a member of multiple state chapters; choose whichever you consider your primary.</span></label>
			<select id="member_state_id" name="member[state_id]">
				<%= options_from_collection_for_select(@states, "id", "name", @member.state_id)%>
			</select>
		<br />
		<p style="font-weight: bold;">Do you wish for this this information to be made public in the online SCL Membership Directory?</p>
		<p class="radio">
			<%= radio_button 'member', 'public', true %><label for="member_public_true">Yes</label>
			<%= radio_button 'member', 'public', false %><label for="member_public_false">No</label>
		</p>
		<!--<p><strong>Please choose your method of payment:</strong></p>
			<%= submit_tag "I will send payment" %><br />
			<%= submit_tag "I will pay online" %>-->
		<%= submit_tag "Submit Application" %>
		</form>
		
		
<% content_for :jquery do %>
		$("#member_school_id").change(function()
		{
			if (document.getElementById('member_school_id').value == 0)
			{
				document.getElementById('other_school_box').className = "";
			}
			else
			{
				document.getElementById('school_other').value = "";
				document.getElementById('other_school_box').className = "invisible";
			}
		});
<% end %>
